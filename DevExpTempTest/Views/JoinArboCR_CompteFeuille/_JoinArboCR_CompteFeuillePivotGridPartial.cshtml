    settings.CallbackRouteValues = new { Controller = "JoinArboCR_CompteFeuille", Action = "JoinArboCR_CompteFeuillePivotGridPartial" };


    settings.PreRender = (sender, e) =>
    {
        ASPxPivotGrid PivotGrid = sender as ASPxPivotGrid;
        MemoryStream collapseStateStream = (MemoryStream)(Session["JoinArboCR_CompteFeuilleMemorySteam"]);
        string layout = (string)(Session["JoinArboCR_CompteFeuilleLayout"]);
        if (layout == null ||
            collapseStateStream == null)
        {
            return;
        }
        PivotGrid.LoadLayoutFromString(layout, PivotGridWebOptionsLayout.DefaultLayout);
        collapseStateStream.Seek(0, SeekOrigin.Begin);
        PivotGrid.LoadCollapsedStateFromStream(collapseStateStream);
    };
    settings.AfterPerformCallback = (sender, e) =>
    {
        ASPxPivotGrid PivotGrid = sender as ASPxPivotGrid;
        Session["JoinArboCR_CompteFeuilleLayout"] = PivotGrid.SaveLayoutToString(PivotGridWebOptionsLayout.DefaultLayout);
        MemoryStream collapseStateStream = (MemoryStream)(Session["JoinArboCR_CompteFeuilleMemorySteam"]);
        if (collapseStateStream != null)
        {
            collapseStateStream.Dispose();
        }
        collapseStateStream = new MemoryStream();
        PivotGrid.SaveCollapsedStateToStream(collapseStateStream);
        Session["JoinArboCR_CompteFeuilleMemorySteam"] = collapseStateStream;
    };





